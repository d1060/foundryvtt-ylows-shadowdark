{{#if allowsCrafting}}
<div class="content" style="width: 99%">
    <h3>{{localize 'SHADOWDARK.item.craft-targets'}}</h3>
    <div>
        <fieldset class="items" style="height: 100%;">
            {{#unless craftTargetsChosen}}
                <div style="color: rgba(0, 0, 0, 0.6); text-align: center;">
                    <em>{{localize "SHADOWDARK.apps.level-up.dragdrop"}}</em>
                </div>
            {{/unless}}
            {{#each item.system.craftTargets}}
                <div style="white-space: nowrap;">
                    <a
                        class="remove-item fas fa-delete-right"
                        data-action="deleteCraftTarget"
                        data-index="{{@index}}"
                        data-id="{{this._id}}"
                    ></a>
                    <a
                        class="content-link"
                        data-link
                        data-tooltip="{{this.name}}"
                        data-id="{{this._id}}"
                    >
                        {{this.name}}
                    </a>
                </div>
            {{/each}}
        </fieldset>
    </div>
</div>
{{/if}}