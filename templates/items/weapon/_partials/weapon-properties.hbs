<div style="display: grid; row-gap: 8px; grid-template-rows: 116px 1fr;">
	<div class="SD-box">
		<div class="header light">
			<label>
				{{localize 'SHADOWDARK.item.weapon.weapon_properties.label'}}
			</label>
			<span>
				<a
					class="item-selector"
					data-action="selectItem"
					data-item-type="weapon"
					data-select-type="itemProperty"
					for="system.properties"
				>
					<i class="fas fa-pen-to-square"></i>
				</a>
			</span>
		</div>
		<div class="content">
			<ul class="tags">
				{{#each propertyItems}}
					<li
						class="tag tag_primary"
						data-tooltip="{{this.system.description}}"
					>
						{{this.name}}
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="SD-box">
		<div class="header light">
			<label>
				{{localize 'SHADOWDARK.item.weapon.weapon_extra_damage.label'}}
			</label>
		</div>
		<div class="content" style="display: flex; row-gap: 4px; flex-flow: column;">
			{{#each system.extraDamage as |ed|}}
				<div style="display: grid; column-gap: 8px; grid-template-columns: 1fr 1fr;">
					<input type="text" name="system.extraDamage" data-index="{{@index}}" value="{{ed.damage}}">
					<select name="system.extraDamageType" data-index="{{@index}}">
						{{selectOptions
							../config.DAMAGE_TYPES
							selected=ed.type
							localize=false
						}}
					</select>
				</div>
			{{/each}}
			<div style="display: grid; column-gap: 8px; grid-template-columns: 1fr 1fr;">
				<input type="text" name="system.newExtraDamage">
					<select name="system.newExtraDamageType" data-new-extra-damage-type="{{system.newExtraDamageType}}">
					{{selectOptions
						config.DAMAGE_TYPES
						selected=system.newExtraDamageType
						localize=false
					}}
				</select>
			</div>
		</div>
	</div>
</div>