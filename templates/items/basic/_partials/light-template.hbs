<div class="light-settings">
	<h3>
		{{localize 'SHADOWDARK.item.light.template'}}
	</h3>
	<select
		name="system.light.template"
		{{#if item.system.light.active}}
			data-tooltip="{{localize 'SHADOWDARK.item.light.in_use_tooltip'}}"
			disabled
		{{/if}}
	>
		{{selectOptions
			config.LIGHT_SETTING_NAMES
			selected=system.light.template
			localize=false
		}}
	</select>
	<h3>
		{{localize 'SHADOWDARK.item.light.intensity'}}
	</h3>
		<input
			name="system.light.intensity"
			type="number"
			value={{lightIntensity}}
			{{#if item.system.light.active}}
				data-tooltip="{{localize 'SHADOWDARK.item.light.in_use_tooltip'}}"
				disabled
			{{/if}}
		>
	</select>
</div>
