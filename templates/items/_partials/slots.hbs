<div class="SD-box">
	<div class="header light">
		<label>{{localize 'SHADOWDARK.inventory.label.slots'}}</label>
		<span></span>
	</div>
	<div class="content">
		<div class="SD-grid right">
			<h3>{{localize 'SHADOWDARK.item.inventory_quantity'}}</h3>
			{{numberInput
				item.system.quantity
				name="system.quantity"
				placeholder="0"
			}}
			<h3>{{localize 'SHADOWDARK.item.inventory_slots'}}</h3>
			{{numberInput
				item.system.slots.slots_used
				name="system.slots.slots_used"
				placeholder="0"
			}}
			<h3>{{localize 'SHADOWDARK.item.inventory_per_slot'}}</h3>
			{{numberInput
				item.system.slots.per_slot
				name="system.slots.per_slot"
				placeholder="0"
			}}
			<h3>{{localize 'SHADOWDARK.item.inventory_free_carry'}}</h3>
			{{numberInput
				item.system.slots.free_carry
				name="system.slots.free_carry"
				placeholder="0"
			}}
			{{#if system.magicItem}}
			<h3>{{localize 'SHADOWDARK.item.magic_charges'}}</h3>
			{{#ifCond system.max_magic_charges '>' 0}}
				<div style="display: grid; grid-column-gap: 4px; grid-template-columns: 1fr 32px; min-width: 62px;"><input type="number" name="system.magic_charges" value="{{system.magic_charges}}" step="any" placeholder="0"><div style="margin: auto;"> / {{system.max_magic_charges}}</div></div>
			{{else}}
				{{numberInput
					item.system.magic_charges
					name="system.magic_charges"
					placeholder="0"
				}}
			{{/ifCond}}
			{{/if}}
		</div>
	</div>
</div>
