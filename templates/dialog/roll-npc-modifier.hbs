<section autocomplete="off" spellcheck="off" class="window-content">
  <div class="shadowdark-dialog">
    <div class="form-group">
      <label>
        {{localize "SHADOWDARK.dialog.item_roll.ability_bonus"}}
      </label>
      <input type="number" name="ability-bonus" value="{{data.abilityBonus}}" placeholder="0">
    </div>
    <hr />

    <div class="form-group">
      <label>{{localize "SHADOWDARK.dialog.roll_mode_label"}}</label>
      <select name="rollMode">
        {{#select rollMode}}
          {{#each rollModes as |mode|}}
            <option value="{{mode.label}}">{{localize mode.label}}</option>
          {{/each}}
        {{/select}}
      </select>
    </div>
    <hr />
  </div>
</section>