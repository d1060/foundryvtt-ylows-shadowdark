<!-- Deity -->
<div class="SD-box">
	<div class="header">
		<label>
			{{#if showBritannianMagic}}
				{{localize "SHADOWDARK.sheet.player.lunarSign.label"}}
			{{else}}
				{{localize "SHADOWDARK.sheet.player.deity.label"}}
			{{/if}}
		</label>
		<span>
			{{#if owner}}
				<a
					class="item-selector fas fa-pen-to-square edit-button"
					data-action="selectItem"
					data-options="deity"
					for="system.deity">
				</a>
			{{/if}}
		</span>
	</div>
	<div class="content">
		<a
			class="content-link background-content-link"
			data-link
			data-uuid="{{system.deity}}"
			data-tooltip="{{uuidToDescription system.deity}}"
		>
			{{uuidToName system.deity}}
		</a>
	</div>
</div>
