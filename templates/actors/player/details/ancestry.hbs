<!-- Ancestry -->
<div class="SD-box">
	<div class="header">
		<label>
			{{localize "SHADOWDARK.sheet.player.ancestry.label"}}
		</label>
		<span>
			{{#if owner}}
				<a
					class="item-selector fas fa-pen-to-square edit-button"
					data-action="selectItem"
					data-options="ancestry"
					for="system.ancestry">
				</a>
			{{/if}}
		</span>
	</div>
	<div class="content">
		{{#if system.ancestry}}
			<a
				class="content-link background-content-link"
				data-link
				data-uuid="{{system.ancestry}}"
			>
				{{uuidToName system.ancestry}}
			</a>
		{{/if}}
	</div>
</div>
