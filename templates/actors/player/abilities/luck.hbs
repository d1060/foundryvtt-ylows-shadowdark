<div class="SD-box grid-colspan-2">
	<div class="header">
		<label>{{localize 'SHADOWDARK.sheet.player.luck'}}</label>
		<span></span>
	</div>
	<div class="content centered large" style="display:flex">
		{{#if usePulpMode}}
			{{numberInput
				actor.system.luck.remaining
				name="system.luck.remaining"
				placeholder="0"
				min=0
			}}
		{{else}}
			{{#each luckTokens}}
				<input
					type="checkbox"
					data-index="{{@index}}"
					name="system.luck.token"
					{{checked this}}
				>
			{{/each}}
		{{/if}}
	</div>
</div>
