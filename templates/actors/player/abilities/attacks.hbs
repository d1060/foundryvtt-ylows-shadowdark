<div class="SD-box">
	<div class="header">
		<label>{{localize 'SHADOWDARK.sheet.player.melee_attacks'}}</label>
		<span></span>
	</div>
	<div class="content">
		{{#each attacks.melee as |attack|}}
			<div class="attack">
				<a
					class="rollable"
					data-action="itemAttack"
					data-attack-type="melee"
					data-handedness="{{attack.handedness}}"
					data-attack-option="{{attack.attackOption}}"
					data-base-damage="{{attack.baseDamage}}"
					data-item-id="{{attack.itemId}}"
				>
					<i class="fa-solid fa-dice-d20"
						data-attack-type="melee"
						data-handedness="{{attack.handedness}}"
						data-attack-option="{{attack.attackOption}}"
						data-base-damage="{{attack.baseDamage}}"
						data-item-id="{{attack.itemId}}"></i>
					{{{attack.display}}}
				</a>
			</div>
		{{/each}}
	</div>
</div>

