<div
	class="shadowdark chat-card item-card"
	data-actor-id="{{actor._id}}"
	data-item-id="{{item._id}}"
>
	<header class="card-header flexrow">
		<img src="{{item.img}}" data-tooltip="{{item.name}}"/>
		<h3 class="item-name">{{item.name}}</h3>
	</header>

	<div class="card-content">
		{{{description}}}
	</div>

	<footer class="card-footer">
		<ul class="tags">
			<li class="tag tag_primary tag_small" style="text-transform: capitalize;">
				{{item.system.category}}
			</li>
			<li class="tag tag_secondary tag_small">
				{{localize "SHADOWDARK.item.spell_duration"}}:
				{{getSpellDuration
					item.system.duration.type
					item.system.duration.value
				}}
			</li>
		</ul>
	</footer>
</div>
